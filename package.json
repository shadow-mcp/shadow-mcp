{
  "name": "shadow-mcp",
  "version": "0.1.1",
  "private": true,
  "description": "The staging environment for AI agents. Rehearse every action before it hits production.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist",
    "build:package": "node scripts/build-package.mjs"
  },
  "keywords": [
    "mcp",
    "ai-agents",
    "testing",
    "simulation",
    "shadow"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.76.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3"
  }
}
